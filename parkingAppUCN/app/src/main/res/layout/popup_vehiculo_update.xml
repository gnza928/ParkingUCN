<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/newpersonicon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_baseline_directions_car_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055" />

    <LinearLayout
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/newpersonicon">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:text="Datos Actuales" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:text="Datos Modificados" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line0"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="142dp">

        <TextView
            android:id="@+id/tPatente"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/rPatente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="PATENTE ..... Ej: GGWP10"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="262dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tCodigoLogo"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rCodigoLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="text"
            android:hint="CODIGO DEL LOGO ....\n Ej: s1254789"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="262dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tMarca"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rMarca"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:hint="MARCA ..... Ej: HYUNDAI"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="262dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line4"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tModelo"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rModelo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:inputType="text"
            android:hint="MODELO .... Ej: VELOSTER"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="28dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line5"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tAnio"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rAnio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="AÑO DEL VEHICULO .... Ej: 2015"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="28dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line6"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tObservacion"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rObservacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="OBSERVACIÓN ....\n Ej: Se estaciona mal"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="28dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line7"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tResponsable"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rResponsable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="RUT DEL RESPONSABLE ...\n. Ej: 12.345.678-9"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="28dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/line8"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tTipoLogo"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="10dp" />

        <EditText
            android:id="@+id/rTipoLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="ROJO O AZUL"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="28dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line9"
        app:layout_constraintVertical_bias="0.34"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/savevehiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="Guardar"
            android:backgroundTint="@color/orange"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="Cancelar"
            android:backgroundTint="@color/orange"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>